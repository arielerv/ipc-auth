{
  "name": "ipc-auth",
  "version": "1.0.0",
  "description": "ipc auth",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "NODE_ENV=test mocha -r ts-node/register -r module-alias/register --reporter=spec 'src/**/*.test.ts'",
    "coverage": "./node_modules/.bin/nyc --reporter=text-summary npm run test:ci",
    "coverage:verbose": "./node_modules/.bin/nyc --reporter=html --reporter=text npm run test:ci",
    "build": "./node_modules/.bin/tsc -p .",
    "prestart": "npm run build",
    "start": "node -r tsconfig-paths/register ./dist/src/index.js",
    "dev": "nodemon",
    "prepare": "husky install"
  },
  "_moduleAliases": {
    "@": "dist/src"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.ts": [
      "organize-imports-cli",
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev/ipc/ipc-auth.git"
  },
  "keywords": [],
  "author": "INDEC (https://github.com/indec-it)",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.indec.gob.ar/dev/ipc/ipc-auth/issues"
  },
  "homepage": "https://gitlab.indec.gob.ar/dev/ipc/ipc-auth#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node-fetch": "2.6.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "organize-imports-cli": "^0.10.0",
    "plop": "^4.0.0",
    "prettier": "^3.4.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.1",
    "module-alias": "^2.2.3",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-fetch": "2.7.0",
    "save-dev": "^0.0.1-security",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  }
}
