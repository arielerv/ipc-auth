{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "./dist/src",
        "rootDir": "./src",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "typeRoots": ["@types", "node_modules/@types"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"],
}
